/* pages/shelvesDetails/shelvesDetails.wxss */
page {

  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 0 5rpx 0 5rpx;
  /* background-color: rgba(230, 227, 227, 94); */

}

.content {
  font-size: 24rpx;
  line-height: 50rpx;
  box-sizing: border-box;
  margin-top: 2rpx;
  width: 100%;
  background-color: rgba(255, 255, 255, 100);
  line-height: 40rpx;
  border-radius: 14rpx;
  border: 1px solid rgba(255, 255, 255, 100);
}

.title {
  display: flex;
  padding-top: 24rpx;
  padding-bottom: 36rpx;
  box-shadow: 1rpx 6rpx 6rpx rgba(230, 227, 227, 94);
  border-radius: 30rpx;
  position: relative;
}
.verification{
  position: absolute;
  width: 64rpx;
  height: 64rpx;
  top: 18px;
  right: 40px;
}
.image {
  width: 169rpx;
  height: 155rpx;
  border-radius: 8rpx;
  margin-left: 44rpx;
}

.name {
  line-height: 39rpx;
  font-size: 32rpx;
  margin-left: 44rpx;
  font-weight: 500;
  margin-bottom: 15rpx;
}

.name2 {
  line-height: 28rpx;
  font-size: 21rpx;
  margin-left: 44rpx;
  color: #777777;
}
.name3 {
  margin-top: 15rpx;
  font-weight: 700;
  line-height: 28rpx;
  font-size: 32rpx;
  margin-left: 44rpx;
  color: #363636;
}

.details {
  padding: 20rpx 30rpx 20rpx 30rpx;
  margin-top: 20rpx;
}

.order {
  text-align: center;
  /* color: #8f8f8f; */
  font-size: 28rpx;
}

.order-content {
  padding-left: 80rpx;

}

.deirt {
  display: flex;
  line-height: 50rpx;
  font-weight: 600;
}
.deirt1{
  display: flex;
  justify-content: flex-end;
  margin-right: 60rpx;
  margin-top: 30rpx;
  font-weight: 600;
}
.deirt1-1{
  font-size: 44rpx;
  color: #ee0600;
}
.deirt1-2{
  font-size: 24rpx;
  color: #ee0600;
}
.deirt>view:nth-child(1) {
  width: 160rpx;
  text-align: right;
}

.top {
  margin: 0 auto;
  width: 560rpx;
  border-top: 1px solid rgba(187, 187, 187, 10);
  /* line-height: 30rpx; */
  /* margin-top: 20rpx;
  margin-bottom: 20rpx; */
}

.bottom {
  margin-top: 26rpx;
}

.fixed {
  /* text-align: center; */
  display: flex;
  flex-direction: column;
  color: #f38b32;
  margin-top: 15rpx;
}

.attention {
  margin-top: 20rpx;
  width: 604rpx;
  /* text-indent: 64rpx; */
  /* margin-right: 0; */
  align-self: flex-end;
  padding-right: 30rpx;
}