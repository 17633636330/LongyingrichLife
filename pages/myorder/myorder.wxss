/**index.wxss**/
page {
  /* background: #f8f8f8; */
  width: 100%;
  height: 100%;
}

.content {
  background-color: rgb(255, 255, 255);
  box-sizing: border-box;
  width: 100%;
  padding-top:20rpx ;
  padding-bottom: 50rpx;
}

/* 新增 */
.add {
  box-sizing: border-box;
  padding: 10rpx;
  padding-top: 20rpx;
  padding-bottom: 0;
  padding-right: 20rpx;
  width: 100%;
  height: 60rpx;
  color: #ea791f;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;

}

/* 商品内容 */
.good-body {
  width: 600rpx;
  /* margin-left: 15rpx; */
  /* border: 2px solid #dedede; */
}

.good {
  box-sizing: border-box;
  position: relative;
  padding: 23rpx;
  width: 100%;
  display: flex;
}

.imgNear>.good-title {
  font-size: 38rpx !important;
  font-weight: 700;
  margin-bottom: 20rpx;
}

.good-img {
  width: 290rpx;
  height: 201rpx;
  border-radius: 8rpx;
}

.good-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.good-price {
  text-decoration: line-through;
}

.imgNear {
  margin-left: 28rpx;
}

.imgNear>view {
  /* line-height: 66rpx; */
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 26rpx;
}

.imgNear>view:nth-child(2)>text {
  color: #101010;
  margin-left: 30rpx;
}

