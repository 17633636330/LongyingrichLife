.all-check {
  width: 100%;
  height: 80rpx;
  background: #F8F8F8;
  padding: 5rpx 32rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.hr {
  margin-top: 35rpx;
  border-bottom: 2px solid #e8e8e8;
}

.all-checkBtn {
  display: flex;
  align-items: center;
}

.order-details {
  display: flex;
}

